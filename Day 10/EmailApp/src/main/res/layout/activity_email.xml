<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".EmailActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText1_email1"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="22dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        />

    <EditText
        android:id="@+id/editText2_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText1_email1"
        android:layout_below="@+id/editText1_email1"
        android:layout_marginTop="18dp"
        android:ems="10"
        />
    <EditText
        android:id="@+id/editText3_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText2_subject"
        android:layout_below="@+id/editText2_subject"
        android:layout_marginTop="28dp"
        android:ems="10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview1"
        android:layout_alignBaseline="@+id/editText1_email1"
        android:layout_alignBottom="@id/editText1_email1"
        android:layout_alignParentLeft="true"
        android:textSize="20dp"
        android:text="To:"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview2"
        android:layout_alignBaseline="@+id/editText2_subject"
        android:layout_alignBottom="@id/editText2_subject"
        android:layout_alignParentLeft="true"
        android:textSize="20dp"
        android:text="Subject:"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview3"
        android:layout_alignBaseline="@+id/editText3_message"
        android:layout_alignBottom="@id/editText3_message"
        android:layout_alignParentLeft="true"
        android:textSize="20dp"
        android:text="Message:"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnsend"
        android:text="Send"
        android:layout_alignEnd="@id/editText3_message"
        android:layout_alignRight="@id/editText3_message"
        android:layout_centerVertical="true"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"

        />
</RelativeLayout>